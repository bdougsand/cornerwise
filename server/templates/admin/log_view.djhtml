{% extends "admin/base_site.html" %}
{% load i18n %}

{% block extrastyle %}
    <style type="text/css">
     #log-output {
         font-family: monospace;
         font-size: small;
         max-height: 80vh;
         overflow: auto;
         white-space: pre-wrap;
     }
    </style>
{% endblock %}

{% block content %}
    <p>{{ lines | length }} line{{ lines | length | pluralize }}</p>
    <div id="log-output">
{% for line in lines %} {{ line }}
{% endfor %}
    </div>
{% endblock %}
