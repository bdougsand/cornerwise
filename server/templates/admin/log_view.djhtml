{% extends "base.djhtml" %}

{% block head %}
    <style type="text/css">
     #log-output {
         font-family: monospace;
         max-height: 80vh;
         overflow: auto;
         white-space: pre-wrap;
     }
    </style>
{% endblock %}

{% block body %}
    <h2>{{ log_name }}</h2>
    <p>{{ lines | length }} line{{ lines | length | pluralize }}</p>
    <div id="log-output">
        {% for line in lines %} {{ line }}
        {% endfor %}
    </div>
{% endblock %}